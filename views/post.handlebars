<div class="row">
    <div class="col-12 justify-content-center">
        <form class="form blog-form">

            <div class="form-group">
                <input id="blog-title" placeholder="Post title...">
            </div>

            <div class="form-group">
                <textarea id="blog-body" placeholder="Your thoughts..." rows="3"></textarea>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="private" id="private">
                    <label for="blog-title">Private</label>
                </div>
            </div>

            <button id="post-Btn" class="btn btn btn-danger btn-lg" type="submit">Post</button>
        </form>
    </div>