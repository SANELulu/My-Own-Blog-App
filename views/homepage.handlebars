<h1 class="text-center">HOMEPAGE<span class="text-primary"></span></h1>

{{#each posts as |post| }}
<div class="container-fluid all-posts">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <a href="./post/{{post.id}}">ID:{{post.id}},{{post.blog_title}}</a>
                    <div style="text-align: right">Posted by {{user.name}} on {{post.date}}</div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{post.blog_body}}</p>
                </div>
            </div>
        </div>
    </div>
    <br>



    {{!-- comment form --}}
    <br>
    <form class="form comment-form">
        <div class="row w-75 ">
            <div class="input-group pl-3 d-flex justify-content-center text-center">
                <input type="text" class="form-control " id="comment-text" placeholder="Leave a comment..."
                    aria-label="" aria-describedby="basic-addon1">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" post-id={{post.id}} id="comment-btn"
                        type="button">Post</button>
                </div>
            </div>
        </div>
    </form>
    <br>
</div>
{{/each}}

<script src="js/comment.js"></script>